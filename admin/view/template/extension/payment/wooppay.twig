{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}"
						class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
							class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> Edit Wooppay</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-wooppay"
					  class="form-horizontal">
					<div class="form-group required">
						<label class="col-sm-2 control-label"
							   for="payment_place">{{ payment_place }}</label>

						<div class="col-sm-10">
							<select name="payment_wooppay_payment_place"
									id="payment_wooppay_payment_place"
									class="form-control">
								{% for key,payment_place_option in payment_place_options %}
									{% if (key == payment_wooppay_payment_place) %}
										<option selected="selected" value="{{ key }}">{{ payment_place_option }}</option>
									{% else %}
										<option value="{{ key }}">{{ payment_place_option }}</option>
									{% endif %}
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label"
							   for="payment_link_card">{{ link_card_label }}</label>

						<div class="col-sm-10">
							{% if (payment_wooppay_link_card) %}
								<input onclick="this.toggleAttribute('checked',{{ payment_wooppay_link_card }})" type="checkbox" name="payment_wooppay_link_card" id="payment_wooppay_link_card" checked="{{ payment_wooppay_link_card }}"> {{ link_card_label }}
							{% else %}
								<input onclick="this.toggleAttribute('checked','checked')" type="checkbox" name="payment_wooppay_link_card" id="payment_wooppay_link_card"> {{ link_card_label }}
							{% endif %}
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_merchant">{{ entry_merchant }}</label>

						<div class="col-sm-10">
							<input type="text" name="payment_wooppay_merchant" value="{{ payment_wooppay_merchant }}"
								   placeholder="{{ entry_merchant }}" id="input-wooppay_merchant"
								   class="form-control"/>
						</div>
						{% if (error_merchant) %}
							<div class="text-danger">{{ error_merchant }}</div>
						{% endif %}
					</div>

					<div class="form-group required">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_password">{{ entry_password }}</label>

						<div class="col-sm-10">
							<input type="password" name="payment_wooppay_password"
								   value="{{ payment_wooppay_password }}"
								   placeholder="{{ entry_password }}" id="input-wooppay_password"
								   class="form-control"/>
						</div>
						{% if (error_password) %}
							<div class="text-danger">{{ error_password }}</div>
						{% endif %}
					</div>

					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-wooppay_url">{{ entry_url }}</label>

						<div class="col-sm-10">
							<input type="text" name="payment_wooppay_url" value="{{ payment_wooppay_url }}"
								   placeholder="{{ entry_url }}" id="input-wooppay_url" class="form-control"/>
						</div>
						{% if (error_url) %}
							<div class="text-danger">{{ error_url }}</div>
						{% endif %}
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_prefix">{{ entry_prefix }}</label>

						<div class="col-sm-10">
							<input type="text" name="payment_wooppay_prefix" value="{{ payment_wooppay_prefix }}"
								   placeholder="{{ entry_prefix }}" id="input-wooppay_prefix"
								   class="form-control"/>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_service">{{ entry_service }}</label>

						<div class="col-sm-10">
							<input type="text" name="payment_wooppay_service" value="{{ payment_wooppay_service }}"
								   placeholder="{{ entry_service }}" id="input-wooppay_service"
								   class="form-control"/>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-wooppay_result_url">Result URL:</label>

						<div class="col-sm-10">
							<input type="text" name="wooppay_result_url" readonly="readonly"
								   value="{{ copy_result_url }}" id="input-wooppay_result_url"
								   class="form-control"/>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-wooppay_success_url">Success URL:</label>

						<div class="col-sm-10">
							<input type="text" name="wooppay_success_url" readonly="readonly"
								   value="{{ copy_success_url }}" id="input-wooppay_success_url"
								   class="form-control"/>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_order_success_status_id">{{ entry_success_status }}</label>

						<div class="col-sm-10">
							<select name="payment_wooppay_order_success_status_id"
									id="input-wooppay_order_success_status_id"
									class="form-control">
								{% for order_status in order_statuses %}
									{% if (order_status['order_status_id'] == payment_wooppay_order_success_status_id) %}
										<option value="{{ order_status['order_status_id'] }} "
												selected="selected"> {{ order_status['name'] }}</option>
									{% else %}
										<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
									{% endif %}
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_order_processing_status_id">{{ entry_processing_status }}</label>

						<div class="col-sm-10">
							<select name="payment_wooppay_order_processing_status_id"
									id="input-wooppay_order_processing_status_id"
									class="form-control">
								{% for order_status in order_statuses %}
									{% if (order_status['order_status_id'] == payment_wooppay_order_processing_status_id) %}
										<option value="{{ order_status['order_status_id'] }}"
												selected="selected">{{ order_status['name'] }}</option>
									{% else %}
										<option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
									{% endif %}
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_status">{{ entry_status }}</label>

						<div class="col-sm-10">
							<select name="payment_wooppay_status" id="input-wooppay_status" class="form-control">
								{% if (payment_wooppay_status) %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label"
							   for="input-wooppay_sort_order">{{ entry_sort_order }}</label>

						<div class="col-sm-10">
							<input type="text" name="payment_wooppay_sort_order"
								   value="{{ payment_wooppay_sort_order }}"
								   placeholder="{{ entry_sort_order }}" id="input-wooppay_sort_order"
								   class="form-control"/>
						</div>
					</div>
				</form>
			</div>
		</div>
{{ footer }}